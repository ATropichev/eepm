# Start service
serv_start()
{
	local SERVICE="$1"
	shift

	case $SERVICETYPE in
		service-chkconfig|service-upstart)
			sudocmd service $SERVICE start "$@"
			;;
		service-initd|service-update)
			sudocmd /etc/init.d/$SERVICE start "$@"
			;;
		systemd)
			sudocmd systemctl start "$SERVICE" "$@"
			;;
		*)
			fatal "Do not known command for $SERVICETYPE"
			;;
	esac
}
