epm_packages()
{
	local CMD

case $PMTYPE in
	apt-rpm)
		CMD="rpm -qa $pkg_filenames"
		;;
	apt-dpkg)
		CMD="dpkg -l $pkg_filenames"
		;;
	yum-rpm|urpm-rpm|zypper-rpm|dnf-rpm)
		CMD="rpm -qa $pkg_filenames"
		;;
# Note: dnf has dnf list command
	emerge)
		CMD="qlist -I"
		;;
	pkgsrc)
		CMD="pkg_info"
		;;
	pacman)
		CMD="pacman -Qs"
		;;
	npackd)
		CMD="npackdcl list"
		;;
#	chocolatey)
#		CMD="chocolatey list"
#		;;
	slackpkg)
		CMD="ls -1 /var/log/packages/"
		;;
	*)
		fatal "Do not known query command for $PMTYPE"
		;;
esac

docmd $CMD

}
