# copied from korinf/tools/run-script/scripts/search

epm_query_file()
{

case $DISTRNAME in
	"ALTLinux"|"PCLinux")
		CMD="rpm -qa"
		;;
	"Ubuntu"|"Debian")
		CMD="dpkg -l"
		;;
	"LinuxXP"|"Fedora"|"ASPLinux"|"CentOS"|"RHEL"|"Scientific")
		CMD="rpm -qa"
		;;
	"Mandriva")
		CMD="rpm -qa"
		;;
	"SUSE")
		CMD="rpm -qa"
		;;
	*)
		RET=1
		CMD="echo \"Do not known query command for DISTRNAME $DISTRNAME\""
		;;
esac

docmd $CMD

}
