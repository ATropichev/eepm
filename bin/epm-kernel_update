epm_kernel_update()
{
	echo "Start update system kernel to the latest version"

	case $DISTRNAME in
	ALTLinux)
		assure_exists update-kernel
		sudocmd update-kernel
		return ;;
	esac

	case $PMTYPE in
	*)
		fatal "Have no suitable command for $PMTYPE"
		;;
	esac
}
