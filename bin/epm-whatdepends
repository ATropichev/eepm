epm_whatdepends()
{
	local CMD
	[ -n "$pkg_names" ] || fatal "Run query without names"

# by package name
case $PMTYPE in
	apt-rpm|apt-dpkg)
		CMD="apt-cache whatdepends"
		;;
	*)
		fatal "Do not known command for $PMTYPE"
		;;
esac

[ -n "$pkg_names" ] && docmd $CMD $pkg_names

}
